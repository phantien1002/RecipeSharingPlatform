@page
@model global::RecipeSharing.Pages.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Trang chủ Công thức";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <div>
            <h2 class="fw-bold text-primary mb-0">Hệ thống Công thức</h2>
            <p class="text-muted mb-0">Khám phá và lưu trữ món ăn yêu thích</p>
        </div>

        <div class="d-flex gap-2">
            <a asp-page="Recipes/MySavedRecipes" class="btn btn-outline-danger shadow-sm">
                <i class="fas fa-heart me-1"></i> Mục đã lưu
            </a>

            <a asp-page="Recipes/Create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> Tạo công thức
            </a>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <form method="post" asp-page="/Auth/Logout" class="d-inline">
                    <button type="submit" class="btn btn-dark shadow-sm">Đăng xuất</button>
                </form>
            }
        </div>
    </div>

    <div class="row">
        @if (Model.Recipes != null && Model.Recipes.Any())
        {
            @foreach (var item in Model.Recipes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Title">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5" style="height: 200px;">
                                <i class="fas fa-utensils fa-3x text-secondary"></i>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Title</h5>

                            <div class="mb-2">
                                @foreach (var rc in item.RecipeCategories)
                                {
                                    <span class="badge bg-info text-dark me-1">@rc.Category.Name</span>
                                }
                            </div>

                            <p class="card-text text-muted small text-truncate">@item.Description</p>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex gap-2 pb-3">
                            <a asp-page="Recipes/Detail" asp-route-id="@item.RecipeId" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-eye me-1"></i> Chi tiết
                            </a>

                            <form method="post" asp-page-handler="Save" asp-route-recipeId="@item.RecipeId">
                                @if (Model.SavedRecipeIds != null && Model.SavedRecipeIds.Contains(item.RecipeId))
                                {
                                    <button type="submit" class="btn btn-warning shadow-sm">
                                        <i class="fas fa-bookmark text-white"></i> <span class="text-white">Đã lưu</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-warning shadow-sm">
                                        <i class="far fa-bookmark"></i> Lưu
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">Chưa có dữ liệu công thức nào.</p>
            </div>
        }
    </div>
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        transition: 0.3s;
        box-shadow: 0 8px 15px rgba(0,0,0,0.1) !important;
    }
</style>